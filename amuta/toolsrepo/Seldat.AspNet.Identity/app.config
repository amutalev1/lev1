<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="DataProvider" value="MySql.Data.MySqlClient" />
    <add key="DefaultPassExp" value="3"/>
    <add key="LoginFailsLimit" value="5" />
    <add key="LockPeriodTime" value="1" /><!--Days-->
    <add key="PasswordExpired" value="90"/><!--Days-->
    
    <!--6 - 10 characters, at least one uppercase letter, one lowercase letter, one number and one special character:-->
    <add key="PasswordRegex" value="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$@$!%*?&amp;])[A-Za-z\d$@$!%*?&amp;]{6,10}" />
  </appSettings>
</configuration>